<div class="row">
    <div class="col s12 m12">
      <% if rider_signed_in? %>
      <h4>Bienvenido <%= current_rider.name %></h4>
      <% else %>
      <h4>Please Register</h4>
      <% end %>
      <div class="card">
        <div class="card-encabezado-ms">
          <span class="card-title yellow-text">BLOG</span>
        </div>
        <div class="card-content card-fondo">
          <table class="striped">
            <thead>
              <tr>
                <th>Title</th>
                <th>Story</th>
                <th>Author</th>
                <th colspan="3"></th>
              </tr>
            </thead>

            <tbody>
              <% @blogs.each do |blog| %>
                <tr>
                  <td><%= blog.title %></td>
                  <td><%= blog.story %></td>
                  <td><%= blog.author %></td>
                  <td><%= link_to 'Show', blog %></td>
                  <td><%= link_to 'Edit', edit_blog_path(blog) %></td>
                  <td><%= link_to 'Destroy', blog, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
        <div class="card-action card-encabezado-ms">
          <% if rider_signed_in? %>
            <%= link_to 'New Blog', new_blog_path, class: "black-text waves-effect grey btn" %>
          <% else %>
            <h4>Please Register</h4>
          <% end %>
        </div>
      </div>
    </div>
  </div>
