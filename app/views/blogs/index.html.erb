<div class="row">
    <div class="col s12 m12">
      <div class="card">
        <div class="card-encabezado-ms">
          <span class="card-title black-text">BLOG</span>
        </div>
        <div class="card-content">
          <table class="striped">
            <thead>
              <tr>
                <th>Title</th>
                <th>Story</th>
                <th>Author</th>
                <th colspan="3"></th>
              </tr>
            </thead>

            <tbody>
              <% @blogs.each do |blog| %>
                <tr>
                  <td><%= blog.title %></td>
                  <td><%= blog.story %></td>
                  <td><%= blog.author %></td>
                  <td><%= link_to 'Show', blog %></td>
                  <td><%= link_to 'Edit', edit_blog_path(blog) %></td>
                  <td><%= link_to 'Destroy', blog, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
        <div class="card-action">
          <%= link_to 'New Blog', new_blog_path, class: "waves-effect waves-light btn" %>
        </div>
      </div>
    </div>
  </div>
